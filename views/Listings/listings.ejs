<% layout("./layouts/boilerplate.ejs") %>
 
<style>
    .filters{
        display: flex;
        margin: 1rem;
        flex-wrap: wrap;
        text-align: center;
        justify-content: center;
    }

    .filter{
        /* padding: 3px; */
        text-align: center;
        margin-right: 2rem;
        font-size: 1.2rem;
        opacity: 0.7;

    }

    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }

    .tax-toggle{
        align-items: flex-end;
        justify-content: flex-end;
        margin-left: 5rem;
        /* border: 1px solid black; */
        border-radius: 1rem;
        padding: 1rem;
        box-shadow: 0cap;
    }

    .tax-info{
        display: none;

    }
</style>


   
    <div class="filters">
        <div class="filter">
            <div><i class="fa-solid fa-location-dot"></i></div>
            <p>Places</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-hotel"></i></div>
            <p>Hotel</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-earth-africa"></i></div>
            <p>Explore</p>
        </div>
        <!-- <p><i class="fa-solid fa-plane-departure"></i></p> -->
        <div class="filter">
            <div><i class="fa-solid fa-plane-departure"></i></div>
            <p>Plane Tour</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></i></div>
            <p>Houses</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-car-rear"></i></div>
            <p>Tour</p>
        </div>
        <br><br>

        <div class="tax-toggle shadow p-3 mb-5 bg-white rounded">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display Taxes</label>
              </div>
        </div>


        
    </div>

        <div class="row row-col-lg-3 row-col-md-3 row-col-sm-1 ">

            <%  for(let listing of allListings){ %>

                <!-- <a href="/listings/<%=listing.id   %>" class="listing-link"> -->

                    <div class="card-col mx-auto mt-5" style="width: 20rem;">
                <a href="/listings/<%=listing.id   %>" class="listing-link">


                        <img src="<%= listing.image.url  %>" class="card-img-top" alt="..."  >
                        <div class="card-body" style="padding: 0 !important;">
                          <p class="card-text"><b><%= listing.title  %></b></p>
                        
                          <p class="card-text">&#x20B9;<%= listing.price.toLocaleString("en-IN")  %> /night  </p> 
                          <i class="tax-info">+ 18% GST</i>
                          
                         
            
                       
                        </div>
                    </a>
                      </div>
                   
              
                  <%  } %>
        


        </div>
       
     

    </div>
   

    


<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    

    taxSwitch.addEventListener("click",()=>{
        let taxinfo = document.getElementsByClassName("tax-info");
        for(info of taxinfo){

            if(info.style.display!="inline"){

                info.style.display="inline";
            }else{

                info.style.display="none";
            }
         
        }
        // taxinfo.style.display="none";
       
    })

    
   
</script>
